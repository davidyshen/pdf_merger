<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="PDFMerger.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:PDFMerger.ViewModels"
    Title="PDF Merger">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid x:Name="AppTitleBar"
              Height="40"
              VerticalAlignment="Top"
              Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Image Source="Assets/Square44x44Logo.png"
                   Width="16"
                   Height="16"
                   Margin="12,0,12,0"/>
            <TextBlock Grid.Column="1"
                       Text="PDF Merger"
                       VerticalAlignment="Center"
                       FontSize="12"/>
        </Grid>

        <Grid Grid.Row="1"
              Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        Spacing="10"
                        Margin="0,0,0,20">
                <Button x:Name="AddFilesButton"
                        Content="Add PDFs"
                        Click="AddFilesButton_Click"
                        Style="{StaticResource AccentButtonStyle}"/>
                <Button x:Name="ClearButton"
                        Content="Clear All"
                        Click="RemoveButton_Click"/>
            </StackPanel>

            <ListView Grid.Row="1"
                      x:Name="PDFListView"
                      ItemsSource="{x:Bind _viewModel.PDFFiles, Mode=OneWay}"
                      SelectionMode="Extended"
                      Background="Transparent"
                      CanReorderItems="True"
                      AllowDrop="True"
                      CanDragItems="True">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:PDFItem">
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Drag Handle -->
                            <FontIcon Glyph="&#xE76F;"
                                      FontSize="12"
                                      Foreground="Gray"
                                      VerticalAlignment="Center"
                                      Margin="0,0,12,0"/>

                            <FontIcon Grid.Column="1"
                                      Glyph="&#xE150;"
                                      VerticalAlignment="Center"
                                      Margin="0,0,12,0"/>

                            <StackPanel Grid.Column="2"
                                        VerticalAlignment="Center">
                                <TextBlock Text="{x:Bind FileName}"
                                           FontWeight="Bold"/>
                                <TextBlock Text="{x:Bind FilePath}"
                                           FontSize="12"
                                           Foreground="Gray"/>
                            </StackPanel>

                            <!-- Up/Down Buttons -->
                            <StackPanel Grid.Column="3"
                                        Orientation="Horizontal"
                                        Spacing="4"
                                        VerticalAlignment="Center">
                                <Button Click="MoveUp_Click"
                                        ToolTipService.ToolTip="Move Up"
                                        Padding="4">
                                    <FontIcon Glyph="&#xE110;"
                                              FontSize="12"/>
                                </Button>
                                <Button Click="MoveDown_Click"
                                        ToolTipService.ToolTip="Move Down"
                                        Padding="4">
                                    <FontIcon Glyph="&#xE1FD;"
                                              FontSize="12"/>
                                </Button>
                                <Button Click="RemoveItem_Click"
                                        ToolTipService.ToolTip="Remove"
                                        Padding="4"
                                        Foreground="Red">
                                    <FontIcon Glyph="&#xE107;"
                                              FontSize="12"/>
                                </Button>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <Grid Grid.Row="2"
                  Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            Spacing="10"
                            VerticalAlignment="Center">
                    <TextBlock Text="Output Filename:"
                               VerticalAlignment="Center"
                               Foreground="Gray"/>
                    <TextBox x:Name="FileNameTextBox"
                             Text="{x:Bind _viewModel.OutputFileName, Mode=TwoWay}"
                             Width="200"
                             PlaceholderText="Enter filename (without .pdf)"/>
                    <Button Click="BrowseButton_Click"
                            ToolTipService.ToolTip="Change Output Folder"
                            Padding="8,4">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="8">
                            <FontIcon Glyph="&#xED25;"
                                      FontSize="14"/>
                            <TextBlock Text="(Optional) Select output folder"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <Button Grid.Column="1"
                        x:Name="MergeButton"
                        Content="Merge Selected PDFs"
                        Click="MergeButton_Click"
                        Style="{StaticResource AccentButtonStyle}"
                        Padding="20,10"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
